<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="ogjReviewDAO">

	<select id="getReviewListCount" resultType="int">
		select count(*) from camp_review
	</select>
	<select id="getReviewList" parameterType="ogjReviewPageDTO" resultType="ogjReviewDTO">
		<![CDATA[
		select * from 
			(select b.*, row_number() 
				over(order by review_no desc) rnum from camp_review b)
					where rnum >= #{startNo} and rnum <= #{endNo}]]>
	</select>



</mapper>